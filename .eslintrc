{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "no-confusing-arrow": 0,
    "padded-blocks": 0,
    "consistent-return": 0,
    "react/prefer-stateless-function": 0,
    "jsx-quotes": [
      2,
      "prefer-double"
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/client.js"
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "__CLIENT__": true
  }
}
